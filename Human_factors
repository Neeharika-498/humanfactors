<script>
const viewGroupButtons = document.querySelectorAll('.view-group');
const editGroupButtons = document.querySelectorAll('.edit-group');


// Add event listeners to buttons (You'll need to fill in the actual functionality)

// Example for 'View Group':
viewGroupButtons.forEach(button => {
    button.addEventListener('click', () => {
        const group = button.closest('.group'); 
        const studentList = group.querySelector('.student-list');
        studentList.style.display = (studentList.style.display === 'block') ? 'none' : 'block'; 
    });
});

</script>

