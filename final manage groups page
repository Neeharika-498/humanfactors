  <div id="groupDetails" class="group-details"></div>

  <script>
    function showGroupDetails(groupName) {
      const groupDetails = document.getElementById('groupDetails');
      groupDetails.innerHTML = `<h2>${groupName} Details</h2>
                                <p><strong>Members:</strong> John, Emily</p>
                                <button onclick="editGroup('${groupName}')">Edit Group</button>`;
      groupDetails.style.display = 'block';
    }

    function createGroup() {
      alert('Feature to create a new group coming soon.');
    }

    function editGroup(groupName) {
      alert(`Editing ${groupName}`);
    }
  </script>
